extends layout

block content
  .container
    .row
      h1= title
      form(method="POST", action="/search")
        .col-sm-6
          each d in scrapedData
            .form-group
              h5= d.state
              select.form-control(name="city")
                option(value="") - Select -
                each c in d.cities
                  option(value="#{c.city}")= c.city
        .col-sm-6
          input.btn.btn-primary(type="submit", style="position: fixed; bottom: 5%; right: 5%;")
